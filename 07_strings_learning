string = "hello my name is harsh"

"""01____find a string length"""

'''print(len(string))'''
#Output
# 22

"""02___Check string- to check if a certain phase or character/word is present in string or not
we can you 'IN' keyword"""

'''print("harsh" in string)'''
#Output 
#True

'''print("ram" in string)'''
#Output 
#False

"""03___Looping through a string """

'''for g in string:             #for loop 
    print(g)'''

# Output 
# h
# e
# l
# l
# o
 
# m
# y
 
# n
# a
# m
# e

# i
# s

# h
# a
# r
# s
# h

"""04___String slicing-- you can return a range of characters by using the slice syntax"""
#postions starts from 0
#0123456......
#hello my name is harsh

'''print(string[2:6])     #right side position will not be printed only before 6th will be printed

print(string[:6])      #if there is nothing in left side that means 0, so 0 to 6 will print

print(string[0:])      #if there is nothing on right side it will print till the end of the string

#negative slicing
#           .......-2,-1
#hello my name is harsh

print(string[-5:])     #it will print harsh

print(string[-5:-1])   #right side position will not be printed only before -1 will be printed'''

# Output
# llo 
